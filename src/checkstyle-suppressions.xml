<!DOCTYPE suppressions PUBLIC
        "-//Puppy Crawl//DTD Suppressions 1.0//EN"
        "http://www.puppycrawl.com/dtds/suppressions_1_0.dtd">

<suppressions>


    <!-- Somehow it fails on the standard Apache v2 header on each file :( -->
    <suppress checks="RegexpSingleline"
              files="(\w+)\.java" />

    <suppress checks="MagicNumber"
              files="(\w+)\.java" />

    <suppress checks="AvoidStarImport"
              files="(\w+)\.java" />

    <suppress checks="AvoidInlineConditionals"
              files="(\w+)\.java" />

    <suppress checks="TodoComment"
              files="(\w+)\.java" />

    <suppress checks="DesignForExtension"
              files="(\w+)\.java" />

    <suppress checks="(\w+)"
              files="TaggedLogger.java" />


    <suppress checks="JavadocPackage"
              files="(\w+)\.java" />

    <!--<suppress checks="JavadocStyleCheck"-->
              <!--files="(\w+)\.java" />-->

    <suppress checks="JavadocMethod"
              files="(\w+)\.java" />

    <suppress checks="JavadocVariable"
              files="(\w+)\.java" />

    <suppress checks="JavadocType"
              files="(\w+)\.java" />

    <suppress checks="LineLength"
              files="(\w+)\.java" />

</suppressions>